#!/bin/sh
QMAILU=`id -u {{ glx_sqmail_ids.qmaild.uname }}`
QMAILG=`id -g {{ glx_sqmail_ids.qmaild.uname }}`
HOSTNAME=`hostname`
export HELOCHECK="."
export MFDNSCHECK=""
export UCSPITLS=""
export SMTPAUTH=""
. {{ glx_sqmail_dir }}/ssl/ssl.env
exec env PATH="{{ glx_sqmail_dir }}/bin:{{ glx_prefix_dir }}/bin:$PATH" \
     sslserver -sevn -Rp -l $HOSTNAME -c 120 \
     -x {{ glx_sqmail_dir }}/control/rules.smtpd.cdb \
     -u $QMAILU -g $QMAILG {{ glx_sqmail_inet_bind_info }} smtp \
     qmail-smtpd 2>&1 &
