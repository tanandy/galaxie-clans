[Unit]
Description=TeamSpeak3 Server
After=network.target

[Service]
Type=simple
User={{ glx.teamspeak_server.user }}
Group={{ glx.teamspeak_server.group }}
WorkingDirectory={{ glx.teamspeak_server.home }}/{{ glx.teamspeak_server.symlink }}/teamspeak3-server_linux_amd64
{% if teamspeak_ini_enabled %}
ExecStart={{ glx.teamspeak_server.home }}/{{ glx.teamspeak_server.symlink }}/teamspeak3-server_linux_amd64/ts3server_minimal_runscript.sh inifile={{ teamspeak_ini_filename }}
{% else %}
ExecStart={{ glx.teamspeak_server.home }}/{{ glx.teamspeak_server.symlink }}/teamspeak3-server_linux_amd64/ts3server_minimal_runscript.sh
{% endif %}

[Install]
WantedBy=multi-user.target
