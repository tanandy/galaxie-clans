[Unit]
Description=DNS cache server and iterative resolver
Documentation=man:dnscache(8)
Requires=network.target
After=network.target

[Service]
Restart=always
PIDFile=/run/dnscache.pid
EnvironmentFile={{ glx_sysprefix_dir }}/ndjbdns/dnscache.conf
ExecStart={{ glx_prefix_dir }}/sbin/dnscache <{{ glx_ndjbdns_dnscache_env_ROOT }}/seed

[Install]
WantedBy=multi-user.target
