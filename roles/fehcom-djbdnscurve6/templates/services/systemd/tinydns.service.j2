[Unit]
Description=DJB tinydns server daemon
Documentation=man:tinydns(8)
Requires=network.target
After=network.target

[Service]
Restart=always
PIDFile=/run/tinydns.pid
EnvironmentFile={{ glx_djbdnscurses6_tinydns_env_ROOT }}/tinydns.conf
ExecStart={{ glx_prefix_dir }}/bin/tinydns

[Install]
WantedBy=multi-user.target