[Unit]
Description=DJB dnscache resolver daemon
Documentation=man:dnscache(8)
Requires=network.target
After=network.target

[Service]
Restart=always
PIDFile=/run/dnscache.pid
EnvironmentFile={{ glx_djbdnscurses6_dnscache_env_ROOT }}/dnscache.conf
ExecStart={{ glx_prefix_dir }}/bin/dnscache <{{ glx_djbdnscurses6_dnscache_env_ROOT }}/seed

[Install]
WantedBy=multi-user.target
